@model Stock

<h1>Confirmar Eliminación</h1>

<div>
    <p>¿Está seguro que desea eliminar el siguiente registro de stock?</p>
    <dl class="row">
        <dt class="col-sm-2">Producto:</dt>
        <dd class="col-sm-10">@Model.Producto.Nombre</dd>
        <dt class="col-sm-2">Proveedor:</dt>
        <dd class="col-sm-10">@Model.Proveedor.Nombre</dd>
        <dt class="col-sm-2">Cantidad:</dt>
        <dd class="col-sm-10">@Model.Cantidad</dd>
    </dl>

    @using (Html.BeginForm())
    {

        <input type="hidden" name="_method" value="DELETE" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
    }
    }
</div>
